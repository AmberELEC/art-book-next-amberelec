<theme>
   <formatVersion>7</formatVersion>

   <subset name="help-system" displayName="Help System">
      <include name="on" displayName="On" />
      <include name="off" displayName="Off" />
   </subset>

   <view name="screen">
      <batteryIndicator name="batteryIndicator">
         <pos>0 0.016666666666667</pos><!-- 0 20 -->
         <size>0.989583333333333 0.041666666666667</size><!-- 1900 50 -->
      </batteryIndicator>
   </view>

   <view name="system,basic,detailed,video">
      <helpsystem ifSubset="help-system:on" name="help">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.9475</pos><!-- 50% 1137 -->
         <fontPath>${fontLight}</fontPath>
         <fontSize>0.021666666666667</fontSize><!-- 26 -->
         <textColor>FFFFFF77</textColor>
         <iconColor>FFFFFF77</iconColor>
         <iconUpDown>./_inc/images/help-dpad-updown.svg</iconUpDown>
         <iconLeftRight>./_inc/images/help-dpad-leftright.svg</iconLeftRight>
         <iconUpDownLeftRight>./_inc/images/help-dpad-updownleftright.svg</iconUpDownLeftRight>
      </helpsystem>
      <helpsystem ifSubset="help-system:off" name="help">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </helpsystem>
      <image ifSubset="help-system:on" name="help-background" extra="static">
         <origin>0 1</origin>
         <pos>0 1</pos>
         <size>1 0.104166666666667</size><!-- 100% 125 -->
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>000000</color>
         <zIndex>5</zIndex>
      </image>
   </view>

   <view name="system">
      <image ifSubset="system-view:centered" name="system-art-mask" extra="true">
         <path>./_inc/images/system-art-mask-16-10.png</path>
      </image>
      <carousel ifSubset="system-view:multi" name="systemcarousel">
         <maxLogoCount>5</maxLogoCount>
      </carousel>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <maxSize>0.276041666666667 0.1</maxSize><!-- 530 120 -->
      </image>
      <text name="logoText">
         <size>0.276041666666667 0.1</size><!-- 530 120 -->
         <fontSize>0.05</fontSize>
      </text>
      <textlist name="gamelist">
         <fontSize>0.035</fontSize><!-- 42 -->
         <lineSpacing>1.476190476190476</lineSpacing><!-- 62 -->
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <pos>0.5 0.120833333333333</pos><!-- 50% 145 -->
      </image>
      <text name="logoText">
         <pos>0.5 0.120833333333333</pos><!-- 50% 145 -->
      </text>
      <textlist name="gamelist">
         <pos>0.5 0.233333333333333</pos><!-- 50% 280 -->
         <size ifSubset="help-system:on">0.895833333333333 0.62</size><!-- 1720 744(62X12) -->
         <size ifSubset="help-system:off">0.895833333333333 0.723333333333333</size><!-- 1720 868(62X14) -->
      </textlist>
   </view>

   <view name="detailed,video">
      <image name="logo">
         <pos>0.1875 0.120833333333333</pos><!-- 360 145 -->
      </image>
      <text name="logoText">
         <pos>0.1875 0.120833333333333</pos><!-- 360 145 -->
      </text>
      <textlist name="gamelist">
         <pos>0.033854166666667 0.233333333333333</pos><!-- 65 280 -->
         <size ifSubset="help-system:on">0.307291666666667 0.62</size><!-- 590 744(62X12) -->
         <size ifSubset="help-system:off">0.307291666666667 0.723333333333333</size><!-- 590 868(62X14) -->
      </textlist>
      <image name="gamelist-background" extra="true">
         <size>0.375 1</size><!-- 720 1200 -->
      </image>
      <image name="game-metadata-background" extra="true">
         <pos>0.375 0</pos><!-- 720 0 -->
         <size>0.625 1</size><!-- 1200 1200-->
      </image>
   </view>

   <view ifSubset="gamelist-layout:metadata-on" name="detailed,video">
      <text name="md_genre,md_releasedate,md_players,md_developer,md_publisher">
         <fontSize>0.02</fontSize><!-- 16 -->
      </text>
      <datetime name="md_releasedate">
         <fontSize>0.02</fontSize><!-- 16 -->
      </datetime>
      <image name="md_releasedate_icon,md_players_icon,md_developer_icon,md_publisher_icon,md_genre_icon,md_lastplayed_icon,md_playcount_icon,md_gametime_icon" extra="true">
         <size>0 0.035</size><!-- x 28 -->
      </image>
      <text name="md_genre">
         <pos>0.453125 0.6625</pos><!-- 580 530 -->
      </text>
      <text name="md_description">
         <pos>0.453125 0.8875</pos><!-- 580 710 -->
         <size>0.3515625 0.18</size><!-- 450 144 -->
         <fontSize>0.03</fontSize><!-- 24 -->
      </text>
      <rating name="md_rating">
         <pos>0.85 0.6625</pos><!-- 1088 530 -->
         <size>0 0.035</size><!-- x 28 -->
      </rating>
      <image name="md_releasedate_icon">
         <pos>0.85 0.7125</pos><!-- 1088 570 -->
      </image>
      <datetime name="md_releasedate">
         <pos>0.8734375 0.7125</pos><!-- 1118 570 -->
         <size>0.0875 0.025</size><!-- 112 20 -->
      </datetime>
      <image name="md_players_icon">
         <pos>0.85 0.7625</pos><!-- 1088 610 -->
      </image>
      <text name="md_players">
         <pos>0.8734375 0.7625</pos><!-- 1118 610 -->
         <size>0.0875 0.025</size><!-- 112 20 -->
      </text>
      <image name="md_developer_icon">
         <pos>0.85 0.8125</pos><!-- 1088 650 -->
      </image>
      <text name="md_developer">
         <pos>0.8734375 0.8125</pos><!-- 1118 650 -->
         <size>0.0875 0.025</size><!-- 112 20 -->
      </text>
      <image name="md_publisher_icon">
         <pos>0.85 0.8625</pos><!-- 1088 690 -->
      </image>
      <text name="md_publisher">
         <pos>0.8734375 0.8625</pos><!-- 1118 690 -->
         <size>0.0875 0.025</size><!-- 112 20 -->
      </text>
   </view>
   <view ifSubset="gamelist-layout:metadata-on" name="detailed">
      <image name="md_image">
         <pos>0.703125 0.33125</pos><!-- 900 265 -->
         <maxSize>0.515625 0.5375</maxSize><!-- 660 430 -->
      </image>
   </view>
   <view ifSubset="gamelist-layout:metadata-on" name="video">
      <video name="md_video">
         <pos>0.703125 0.33125</pos><!-- 900 265 -->
         <maxSize>0.515625 0.5375</maxSize><!-- 660 430 -->
      </video>
   </view>

   <view ifSubset="gamelist-layout:metadata-off|metadata-off-immersive" name="detailed">
      <image name="md_image">
         <pos ifSubset="help-system:on">0.6875 0.447916666666667</pos><!-- 1320 537.5 -->
         <pos ifSubset="help-system:off">0.6875 0.5</pos><!-- 1320 600 -->
         <maxSize ifSubset="help-system:on,gamelist-layout:metadata-off">0.5625 0.795833333333333</maxSize><!-- 1080 955 -->
         <maxSize ifSubset="help-system:off,gamelist-layout:metadata-off">0.5625 0.9</maxSize><!-- 1080 1080 -->
         <maxSize ifSubset="gamelist-layout:metadata-off-immersive">1.1 1.1</maxSize>
      </image>
   </view>
   <view ifSubset="gamelist-layout:metadata-off|metadata-off-immersive" name="video">
      <image ifSubset="gamelist-layout:metadata-off-immersive" name="md_marquee">
         <pos ifSubset="help-system:on">0.6875 0.447916666666667</pos><!-- 1320 537.5 -->
         <pos ifSubset="help-system:off">0.6875 0.5</pos><!-- 1320 600 -->
         <maxSize>0.40625 0.754166666666667</maxSize><!-- 780 905 -->
      </image>
      <video name="md_video">
         <pos ifSubset="help-system:on">0.6875 0.447916666666667</pos><!-- 1320 537.5 -->
         <pos ifSubset="help-system:off">0.6875 0.5</pos><!-- 1320 600 -->
         <maxSize ifSubset="help-system:on,gamelist-layout:metadata-off">0.5625 0.795833333333333</maxSize><!-- 1080 955 -->
         <maxSize ifSubset="help-system:off,gamelist-layout:metadata-off">0.5625 0.9</maxSize><!-- 1080 1080 -->
         <maxSize ifSubset="gamelist-layout:metadata-off-immersive">1.1 1.1</maxSize>
      </video>
   </view>

</theme>