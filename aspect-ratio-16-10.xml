<theme>
   <formatVersion>7</formatVersion>

   <!-- Help System -->
   <subset name="help-system" displayName="Help System">
      <include name="on" displayName="On" />
      <include name="off" displayName="Off" />
   </subset>

   <view name="screen">
      <batteryIndicator name="batteryIndicator">
         <pos>0 0.0225</pos><!-- - 18 -->
         <size>0.9890625 0.0425</size><!-- 1408 34 -->
      </batteryIndicator>
   </view>

   <view name="system,basic,detailed,video">
      <helpsystem ifSubset="help-system:on" name="help">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.95625</pos><!-- 50% 765 -->
         <fontPath>${fontLight}</fontPath>
         <fontSize>00.0225</fontSize><!-- 18 -->
         <textColor>FFFFFF77</textColor>
         <iconColor>FFFFFF77</iconColor>
         <iconUpDown>./_inc/images/help-dpad-updown.svg</iconUpDown>
         <iconLeftRight>./_inc/images/help-dpad-leftright.svg</iconLeftRight>
         <iconUpDownLeftRight>./_inc/images/help-dpad-updownleftright.svg</iconUpDownLeftRight>
         <!--<iconA>./_inc/images/help-a.svg</iconA>
         <iconB>./_inc/images/help-b.svg</iconB>
         <iconX>./_inc/images/help-x.svg</iconX>
         <iconY>./_inc/images/help-y.svg</iconY>
         <iconL>./_inc/images/help-l.svg</iconL>
         <iconR>./_inc/images/help-r.svg</iconR>
         <iconStart>./_inc/images/help-start.svg</iconStart>
         <iconSelect>./_inc/images/help-select.svg</iconSelect>
         <iconF1>./_inc/images/help-f1.svg</iconF1>-->
      </helpsystem>
      <helpsystem ifSubset="help-system:off" name="help">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </helpsystem>
      <image ifSubset="help-system:on" name="help-background" extra="static">
         <origin>0 1</origin>
         <pos>0 1</pos>
         <size>1 0.0875</size><!-- 100% 70 -->
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>000000</color>
         <zIndex>5</zIndex>
      </image>
   </view>

   <view name="system">
      <image ifSubset="system-view:centered" name="system-art-mask" extra="true">
         <path>./_inc/images/system-art-mask-16-10.png</path>
      </image>
      <carousel ifSubset="system-view:multi" name="systemcarousel">
         <maxLogoCount>5</maxLogoCount>
      </carousel>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <maxSize>0.328125 0.1</maxSize><!-- 420 80 -->
      </image>
      <text name="logoText">
         <size>0.328125 0.1</size><!-- 420 80 -->
      </text>
      <textlist name="gamelist">
         <fontSize>0.035</fontSize><!-- 28 -->
         <lineSpacing>1.5</lineSpacing><!-- 6/6 -->
      </textlist>
   </view>

   <view name="detailed,video">
      <image name="logo">
         <pos>0.203125 0.13125</pos><!-- 260 105 -->
      </image>
      <text name="logoText">
         <pos>0.203125 0.13125</pos><!-- 260 105 -->
      </text>
      <textlist name="gamelist">
         <pos>0.0390625 0.8875</pos><!-- 50 710 -->
         <size>0.3203125 0.63</size><!-- 410 504 -->
      </textlist>
      <image name="gamelist-background" extra="true">
         <size>0.40625 1</size><!-- 520 800 -->
      </image>
      <image name="game-metadata-background" extra="true">
         <pos>0.40625 0</pos><!-- 520 0 -->
         <size>0.59375 1</size><!-- 760 720-->
      </image>
   </view>

   <view ifSubset="gamelist-layout:metadata-on" name="detailed,video">
